<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%boldYellow(%d{MM-dd-YYYY HH:mm:ss}) %boldCyan(%-22.-22thread) %red(%0.0X{jda.shard}) %boldGreen(%-20.-20logger{0}) %highlight(%-1level) %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>